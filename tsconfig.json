{
  "compilerOptions": {
    "target": "ES2018",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
  },
  "exclude": [
   "./node_modules",
   "./tests/**/*.ts"
  ],
  "typeAcquisition": {
    "enable": false
  }
}